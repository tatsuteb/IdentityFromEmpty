@model AppWithIdentity.Models.Account.LoginModel

<h2>ログイン</h2>

<form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" value="@Model.Email" />
        <span asp-validation-for="Email"></span>
    </div>

    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" value="@Model.Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        <label asp-for="RememberMe"></label>
        <input asp-for="RememberMe" value="@Model.RememberMe" />
    </div>

    <button type="submit">Log in</button>
</form>

<div>
    <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]">新規登録</a>
</div>