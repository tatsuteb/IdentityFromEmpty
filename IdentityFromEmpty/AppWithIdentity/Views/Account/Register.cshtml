@model AppWithIdentity.Models.Account.RegisterModel

<h2>新規登録</h2>

<form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" value="@Model.Email" />
        <span asp-validation-for="Email"></span>
    </div>
    
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" value="@Model.Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <button type="submit">Register</button>
</form>

<div>
    <a asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">ログイン</a>
</div>